<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
             
            var checks = $("section.data-table table.table").find("input[type='checkbox']").each(function (index, elem) {

                $(this).click(function(){
                    var parents = $(this).parents("tr").eq(0);
                    if ($(this).prop('checked') === true) {
                        parents.addClass("row-selected");                        
                    }
                    else {
                        parents.removeClass("row-selected");
                         
                    }
                });
            });

             

             


        });

    </script>
</head>
<body>
    <section id="container">
        <header id="header">
            <nav id="social">
            </nav>           
            <nav id="nav"> 
                <ul> 
                    <li> <a href="#"> Categories </a></li>
                    <li> <a href="#"> Items </a></li>
                    <li> <a href="#"> Rescources </a></li>
                    <li> <a href="#"> About </a></li>
                </ul>
            </nav>
        </header>
        <section id="content">
            @RenderBody()
        </section>        
    </section>
    

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
